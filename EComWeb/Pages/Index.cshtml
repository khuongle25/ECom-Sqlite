<section class="featured spad">
<div class="container">
    <form method="get">
        <select asp-for="@Model.ProductIndexViewModel.ManufactureFilterApplied" asp-items="@Model.ProductIndexViewModel.Manufactures"></select>
        <select asp-for="@Model.ProductIndexViewModel.CategoryFilterApplied" asp-items="@Model.ProductIndexViewModel.Categories" class="esh-catalog-filter"></select> 
        <input asp-for="@Model.ProductIndexViewModel.NameFilterApplied"></input>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    @if (Model.ProductIndexViewModel.ProductItems.Any())
    {
        <div class="esh-catalog-items row">
            @foreach (var productItem in Model.ProductIndexViewModel.ProductItems)
            {
                <div class="esh-catalog-items col-md-4">
                    <partial name="Shared/_product" for="@productItem"/>
                </div>
            }
        </div>
        <div class="container">
        <partial name="Shared/_pagination" for="@Model.ProductIndexViewModel.PaginationInfo"/></div>
    }
    else
    {
        <div class="esh-catalog-items row">
            THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
        </div>
    }
    <h1></h1>
    </div>
    </div>
